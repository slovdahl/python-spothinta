{
    "cSpell.words": [
        "Hinta",
        "spothinta"
    ],
    "isort.args": ["--profile", "black"],
    "python.formatting.provider": "black",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true
        }
    }
}
